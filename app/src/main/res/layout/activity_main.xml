<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTituloPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="cursive"
        android:text="EvaluaciÃ³n Grupo1"
        android:textColor="#0819AF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="186dp"
        android:layout_height="92dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloPrincipal"
        app:layout_constraintVertical_bias="0.152">

        <TextView
            android:id="@+id/tvCarlos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Carlos Acosta"
            android:textColor="#E81616"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvWilliam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="William Sanchez"
            android:textColor="#178814"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvDiego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diego Giraldo"
            android:textColor="#2196F3"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttGuardar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloPrincipal"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="271dp"
        android:layout_marginBottom="84dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttGuardar"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloPrincipal"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="3dp">

        <ImageView
            android:id="@+id/imgLocal"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/escritorio" />

        <ImageView
            android:id="@+id/imgInternet"
            android:layout_width="193dp"
            android:layout_height="179dp"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>